def BRANCH = ""
def version = ""
def appName = ""

def getVirtualService() {
	files = findFiles(glob: '*.*')
	return files
}

pipeline {

	agent { label "debian" }
	tools {
        maven 'maven-360'
    }
	stages {

		stage ("Inicializacion") {
            steps {
				echo "Inicio pipeline"
            }
        }

        stage ("artifactId y version desde el pom.xml") {
            steps {
            	script {
            		pom = readMavenPom file: 'pom.xml'
    				version = pom.version
    				appName = pom.artifactId.toLowerCase()
    				BRANCH = BRANCH_NAME.substring(BRANCH_NAME.lastIndexOf('/') + 1, BRANCH_NAME.length())
            	}
            }
        }

        stage ("Echo variables") {
            steps {
				echo "version = ${version}"
				echo "appName = ${appName}"
				echo "BRANCH_NAME = ${BRANCH}"
            }
        }

        stage("deploy") {
        	steps {
				timeout(time: 30, unit: 'SECONDS') {
                    script {
                        // Show the select input modal
                       def INPUT_PARAMS = input message: 'Please Provide Parameters', ok: 'Next',
                            parameters: [
                            choice(name: 'ENVIRONMENT', choices: ['dev','qa', 'pre', 'pro'].join('\n'), description: 'Please select the Environment'),
                            choice(name: 'IMAGE_TAG', choices: getVirtualService(), description: 'Available Docker Images')]
                        env.ENVIRONMENT = INPUT_PARAMS.ENVIRONMENT
                        env.IMAGE_TAG = INPUT_PARAMS.IMAGE_TAG
                        
                        echo "environment = ${env.ENVIRONMENT}"
                        echo "environment = ${env.ENVIRONMENT}"
                    }
	        	}
	    	}
	    }

    }

	post {
        always {
			echo "Fin Proceso"
        }
        success {
            echo "Fin OK";
        }
        unstable {
            echo "Fin inestable";
        }
        failure {
            echo "Fin KO";
        }
    }
}
